<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditQuestionActivity">

    <!--Teljes scrool || full scroll -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainscrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <!--Nagyítás || Zoom -->
        <com.attibexx.old_learning_app.ui.CooperativeZoomContainer
            android:id="@+id/zoomContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="24dp">

                <!--Code-view editor-->
                <com.amrdeveloper.codeview.CodeView
                    android:id="@+id/codeView"
                    android:layout_width="0dp"
                    android:layout_height="520dp"
                    android:layout_margin="16dp"
                    android:gravity="top|start"
                    android:hint="@string/jsonEditHint"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:scrollbars="vertical|horizontal"
                    android:textColorHint="#78909C"
                    android:background="@drawable/edittextborder"
                    android:padding="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/buttonScroll"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="VisualLintTextFieldSize,EditableContentDescCheck" />

                <!--Gombok || Buttons -->
                <ScrollView
                    android:id="@+id/buttonScroll"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:clipToPadding="true"
                    android:fadeScrollbars="false"
                    android:nestedScrollingEnabled="true"
                    android:paddingBottom="0dp"
                    android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
                    android:scrollbarTrackVertical="@drawable/scrollbar_track"
                    android:scrollbars="vertical"
                    android:overScrollMode="never"
                    app:layout_constrainedHeight="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/codeView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <!--Másolás vágolapra gomb || Copy to clipboard button-->
                        <Button
                            android:id="@+id/copyButton"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginBottom="10dp"
                            android:drawablePadding="2.dp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="@string/edit_Activity_copyButton"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            app:iconTint="@android:color/white"
                            app:backgroundTint="@color/button_pressed"
                            app:cornerRadius="0.dp"
                            app:icon="@drawable/outline_content_copy_24"
                            app:iconGravity="textStart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="VisualLintButtonSize" />
                        <!--Beilesztés vágolaptól gomb || Paste from clipboard button-->
                        <Button
                            android:id="@+id/pasteButton"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="2.dp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="@string/edit_activity_PasteButton"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            app:iconTint="@android:color/white"
                            app:backgroundTint="@color/button_pressed"
                            app:cornerRadius="0.dp"
                            app:icon="@drawable/outline_content_paste_24"
                            app:iconGravity="textStart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/copyButton"
                            tools:ignore="VisualLintButtonSize" />
                        <!--Visszavonás gomb || Undo button-->
                        <Button
                            android:id="@+id/undoButton"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="2.dp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="@string/ecit_question_undo_button"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            app:iconTint="@android:color/white"
                            app:backgroundTint="@color/button_pressed"
                            app:cornerRadius="0.dp"
                            app:icon="@drawable/outline_undo_button_24"
                            app:iconGravity="textStart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/pasteButton"
                            tools:ignore="VisualLintButtonSize" />

                        <!--Minden adat tőrlése || All delete button-->
                        <Button
                            android:id="@+id/all_delete_button"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="2.dp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="@string/allDataDelete"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            app:iconTint="@android:color/white"
                            app:backgroundTint="@color/button_pressed"
                            app:cornerRadius="0.dp"
                            app:icon="@drawable/outline_delete_24"
                            app:iconGravity="textStart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/undoButton"
                            tools:ignore="VisualLintButtonSize" />
                        <!--Json formázása gomb|| Json formatting button-->
                        <Button
                            android:id="@+id/beautifyButton"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="2.dp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="@string/edit_Activity_JsonPretty"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            app:iconTint="@android:color/white"
                            app:backgroundTint="@color/button_pressed"
                            app:cornerRadius="0.dp"
                            app:icon="@drawable/outline_format_align_left_24"
                            app:iconGravity="textStart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/all_delete_button"
                            tools:ignore="VisualLintButtonSize" />
                        <!--Json formátum ellenőrzése gomb || Json formatting check button-->
                        <Button
                            android:id="@+id/validateButton"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="2.dp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="@string/edit_Activity_Json_Validate"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            app:iconTint="@android:color/white"
                            app:backgroundTint="@color/button_pressed"
                            app:cornerRadius="0.dp"
                            app:icon="@drawable/outline_data_check_24"
                            app:iconGravity="textStart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/beautifyButton"
                            tools:ignore="VisualLintButtonSize" />
                        <!--Json fájl megnyitása gomb|| Json file open button-->
                        <Button
                            android:id="@+id/openFileButton"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="2.dp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="@string/edit_activity_openFileJson"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            app:iconTint="@android:color/white"
                            app:backgroundTint="@color/button_pressed"
                            app:cornerRadius="0.dp"
                            app:icon="@drawable/outline_file_open_24"
                            app:iconGravity="textStart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/validateButton"
                            tools:ignore="VisualLintButtonSize" />
                        <!--Json fájl mentése gomb|| Json file save button-->
                        <Button
                            android:id="@+id/jsonFileSaveButton"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="2.dp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="@string/edit_Activity_JsonSaveButton"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            app:iconTint="@android:color/white"
                            app:backgroundTint="@color/button_pressed"
                            app:cornerRadius="0.dp"
                            app:icon="@drawable/outline_save_24"
                            app:iconGravity="textStart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/openFileButton"
                            tools:ignore="VisualLintButtonSize" />
                        <!--Json fájl mentés másként gomb|| Json file save as button-->
                        <Button
                            android:id="@+id/jsonFileSaveAsButton"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="2.dp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="@string/edit_Activity_jsonFileAsSaveButton"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            app:iconTint="@android:color/white"
                            app:backgroundTint="@color/button_pressed"
                            app:cornerRadius="0.dp"
                            app:icon="@drawable/outline_save_as_24"
                            app:iconGravity="textStart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/jsonFileSaveButton"
                            tools:ignore="VisualLintButtonSize" />
                        <!--Vissza a főmenü gomb || Back to main menu button-->
                        <Button
                            android:id="@+id/backToTheMainMenuButton"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="2.dp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="@string/backToTheMainMenuText"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            app:iconTint="@android:color/white"
                            app:backgroundTint="@color/button_pressed"
                            app:cornerRadius="0.dp"
                            app:icon="@drawable/outline_menu_24"
                            app:iconGravity="textStart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/jsonFileSaveAsButton"
                            tools:ignore="VisualLintButtonSize" />
                        <Space
                            android:id="@+id/bottom_spacer"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toBottomOf="@id/backToTheMainMenuButton"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </ScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.attibexx.old_learning_app.ui.CooperativeZoomContainer>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
